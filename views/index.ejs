<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/style.css">
    <title>Main Page</title>
</head>
<body>
    <header class="header">
        <div class="container">
            <a href="/new">Add a new product</a><br>
            <a href="/deletecategory">Delete a category</a><br>
            <a href="/deleteproduct">Delete a product</a>
        </div>
        <div class="header-nav">
            <% for(let i = 0; i<categories.length; i++) { %>
                <a href="/category/<%= categories[i].category %>"><%= categories[i].category %></a>
            <% } %>
        </div>
    </header>
    <main class="center">
        <div class="products">
            <% for(let i = 0; i<products.length; i++) { %>
                <div class="product-card">
                    <img src="/" alt="Фото товара">
                    <a href="/product/<%= products[i].name %>"><%= products[i].name %></a>
                    <p><%= products[i].brand %></p>
                    <p><%= products[i].price %></p>
                </div>
            <% } %>
        </div>
    </main>
</body>
</html>